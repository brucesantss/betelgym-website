generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Planos {
  EXPERIMENTAL
  MENSAL
  BIMESTRAL
  TRISMESTRAL
  ANUAL
}

enum Modalidade {
  MUSCULACAO
  NATACAO
  FUNCIONAL
}

model Aluno {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String

  plano      Planos?     @default(EXPERIMENTAL)
  modalidade Modalidade? @default(MUSCULACAO)

  vencimento DateTime?

  contaCriada DateTime
}
